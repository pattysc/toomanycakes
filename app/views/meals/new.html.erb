<div class="container">

  <h2>New Meal</h2>

  <% if flash[:notice] %>

    <% flash[:notice].each do |error| %>
    <%= error %>.
    <br>
    <% end %>
  <% end %>
  <br>


  <%= form_for @meal do |f| %>

  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description %>
  <br><br>
  <%= label_tag "Portions" %>
  <br>
  <%= select_tag "meal[number]", options_for_select(1..16) %>
  <br><br>
  <%= f.label :expiration %>
  <br>
  <%= f.date_field :expiration, min: Date.tomorrow, max: Date.today + 7 %>
  <br><br>
  <%= f.label :category %>
  <br>
  <%= f.select :category, Meal.available_categories %>
  <br><br>
  <%= f.label "Image URL" %>
  <br>
  <%= f.text_field :img_url %>
  <br><br>
  <%= submit_tag "Create meal" %>
  <% end %>

</div>
