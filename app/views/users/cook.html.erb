<h2><span class="red-text text-lighten-2">Meals Cooked By You</span></h2>
<% @meals.each do |meal| %>
  <% if meal.fresh? %>
    <div class="card medium">
      <div class="card-image">
        <% if meal.img_url.blank? %>
          <%= image_tag "cake.png", width: {"50%"} %>
        <% else %>
          <%= image_tag "#{meal.img_url}", width: {"50%"} %>
        <% end %>
      </div>
      <div class="card-content">
        <span class="card-title"><%= meal.name %></span>
        <p>
          <%= meal.description %>
        </p>
      </div>
      <div class="card-action">
        <%= link_to "Go To Meal", meal %>
        <%= link_to "Edit", edit_meal_path(meal) %>
      </div>
    </div>
  <% end %>
<% end %>
